{% extends "includes/template.twig" %}
{% block navbar %}{% endblock %}

{% block head %}
	{{parent()}}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
{% endblock %}
{% block title %}
	{{title}}
{% endblock %}

{% block main %}
	<div class="container mt-5 p-5">
		<div class="row justify-content-center">
			<div class="col-lg-6 col-md-8">
				<div class="card bg-light shadow border-0">
					<div class="card-body px-lg-5 py-lg-5">
						<div class="text-dark text-center mt-0 mb-4">
							<legend>{{title1}}</legend>
						</div>
						<form action="" method="post" autocomplete="off" id="form-login{{admin}}">

							{% if login == url_for('signin') %}

								<div class="form-group">
									<div class="input-group mb-3">
										<div class="input-group-prepend"></div>
										<input name="name" class="form-control" placeholder="Nome" type="text" required>
									</div>
								</div>

							{% endif %}

							<div class="form-group">
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text">
											<i class="bi bi-envelope-fill"></i>
										</span>
									</div>
									<input name="email" class="form-control" placeholder="Email" type="email" required>
								</div>
							</div>
							<div class="form-group">
								<div class="input-group">
									<div class="input-group-prepend">
										<span class="input-group-text">
											<i class="bi bi-key-fill"></i>
										</span>
									</div>
									<input name="pass" class="form-control" placeholder="Senha" type="password" required>
								</div>
							</div>

							<div class="text-center">
								<button type="submit" class="btn text-white mt-4" style="background-color: #21081a;">Enviar</button>
							</div>
							<div class="row mt-5 custom-checkbox">
								<div class="col-6">
									<a class="text-dark text-decoration-none font-weight-bold" href="{{url_for('home')}}">Voltar</a>
								</div>
								{% if title1 != 'Admin' %}
									<div class="col-6 text-end">
										<span class="text-muted">


											<a class="text-dark text-decoration-none text-end" href="{{login}}">Clique aqui
											</a>
											para
											{{action}}!
										</span>
									</div>
								{% endif %}

							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="modal" tabindex="-1">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title"></h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<p id="error-msg"></p>
				</div>
			</div>
		</div>
	</div>
	<script src="{{api}}"></script>
{% endblock %}
